<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.androidbox.thaimassage.login.LoginView">

    <ImageView
        android:id="@+id/ivLoginScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/thaimassage"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/btnLoginWithMobilePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/log_in_with_mobile_number"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:textSize="16sp"
        android:textColor="@color/login_with_phone_border"
        android:fontFamily="sans-serif"
        android:background="@drawable/login_with_phone"
        android:drawableStart="@drawable/common_full_open_on_phone"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        android:layout_above="@+id/btnLoginWithMobilePhone"
        android:layout_gravity="center"/>

</RelativeLayout>
